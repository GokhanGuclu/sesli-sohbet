{
  "name": "sesli-sohbet",
  "version": "1.0.4",
  "description": "Sesli Sohbet Electron Uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "web": "node server.js",
    "web:dev": "node server.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish=always"
  },
  "keywords": [
    "electron",
    "sesli-sohbet",
    "webrtc",
    "websocket"
  ],
  "author": "Gökhan Güçlü",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.3.1",
    "graceful-fs": "^4.2.11",
    "jsonfile": "^6.1.0",
    "klaw": "^4.0.1",
    "lodash.once": "^4.1.1",
    "lodash.uniq": "^4.5.0",
    "semver": "^7.5.4",
    "universalify": "^2.0.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.gokhanguclu.seslisohbet",
    "productName": "Sesli Sohbet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!backend/**/*",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "node_modules/electron-updater",
        "to": "node_modules/electron-updater"
      },
      {
        "from": "node_modules/fs-extra",
        "to": "node_modules/fs-extra"
      },
      {
        "from": "node_modules/graceful-fs",
        "to": "node_modules/graceful-fs"
      },
      {
        "from": "node_modules/jsonfile",
        "to": "node_modules/jsonfile"
      },
      {
        "from": "node_modules/klaw",
        "to": "node_modules/klaw"
      },
      {
        "from": "node_modules/lodash.once",
        "to": "node_modules/lodash.once"
      },
      {
        "from": "node_modules/lodash.uniq",
        "to": "node_modules/lodash.uniq"
      },
      {
        "from": "node_modules/semver",
        "to": "node_modules/semver"
      },
      {
        "from": "node_modules/universalify",
        "to": "node_modules/universalify"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "gokhanguclu",
      "repo": "sesli-sohbet",
      "private": false,
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
