{
  "name": "sesli-sohbet",
  "version": "1.3.2",
  "description": "Güvenli ve kullanıcı dostu sesli sohbet uygulaması - WebRTC teknolojisi ile yüksek kaliteli ses iletişimi",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "web": "node server.js",
    "web:dev": "node server.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish=always",
    "sign:win": "electron-builder --win --publish=never",
    "sign:mac": "electron-builder --mac --publish=never",
    "build:secure": "node scripts/build-secure.js",
    "create-cert": "node scripts/create-certificate.js",
    "test:security": "node scripts/test-security.js"
  },
  "keywords": [
    "electron",
    "sesli-sohbet",
    "webrtc",
    "websocket",
    "voice-chat",
    "communication",
    "audio",
    "real-time"
  ],
  "author": {
    "name": "Gökhan Güçlü",
    "email": "gokhan@example.com",
    "url": "https://github.com/gokhanguclu"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gokhanguclu/sesli-sohbet.git"
  },
  "homepage": "https://github.com/gokhanguclu/sesli-sohbet#readme",
  "bugs": {
    "url": "https://github.com/gokhanguclu/sesli-sohbet/issues"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-updater": "^6.6.2",
    "electron-notarize": "^1.2.4"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "fs-extra": "^11.3.1",
    "graceful-fs": "^4.2.11",
    "js-yaml": "^4.1.0",
    "jsonfile": "^6.1.0",
    "klaw": "^4.0.1",
    "lazy-val": "^1.0.5",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.isequal": "^4.5.0",
    "lodash.once": "^4.1.1",
    "lodash.uniq": "^4.5.0",
    "ms": "^2.1.3",
    "sax": "^1.4.1",
    "semver": "^7.5.4",
    "universalify": "^2.0.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.gokhanguclu.seslisohbet",
    "productName": "Sesli Sohbet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!backend/**/*",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "node_modules/debug",
        "to": "node_modules/debug"
      },
      {
        "from": "node_modules/electron-updater",
        "to": "node_modules/electron-updater"
      },
      {
        "from": "node_modules/fs-extra",
        "to": "node_modules/fs-extra"
      },
      {
        "from": "node_modules/graceful-fs",
        "to": "node_modules/graceful-fs"
      },
      {
        "from": "node_modules/jsonfile",
        "to": "node_modules/jsonfile"
      },
      {
        "from": "node_modules/klaw",
        "to": "node_modules/klaw"
      },
      {
        "from": "node_modules/lodash.once",
        "to": "node_modules/lodash.once"
      },
      {
        "from": "node_modules/lodash.uniq",
        "to": "node_modules/lodash.uniq"
      },
      {
        "from": "node_modules/ms",
        "to": "node_modules/ms"
      },
      {
        "from": "node_modules/semver",
        "to": "node_modules/semver"
      },
      {
        "from": "node_modules/universalify",
        "to": "node_modules/universalify"
      },
      {
        "from": "node_modules/sax",
        "to": "node_modules/sax"
      },
      {
        "from": "node_modules/js-yaml",
        "to": "node_modules/js-yaml"
      },
      {
        "from": "node_modules/lazy-val",
        "to": "node_modules/lazy-val"
      },
      {
        "from": "node_modules/lodash.isequal",
        "to": "node_modules/lodash.isequal"
      },
      {
        "from": "node_modules/lodash.escaperegexp",
        "to": "node_modules/lodash.escaperegexp"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "gokhanguclu",
      "repo": "sesli-sohbet",
      "private": false,
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "signingHashAlgorithms": ["sha256"],
      "signDlls": false,
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "rfc3161TimeStampServer": "http://timestamp.digicert.com",
      "timeStampServer": "http://timestamp.digicert.com"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true,
      "license": "LICENSE",
      "include": "build/installer.nsh"
    }
  }
}
